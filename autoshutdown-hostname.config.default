; ############################
, ##    Cliens Settings     ##
; ############################
; client (to be checked) information; separated by space
DS2413_CHECKHOSTS=client_1 client_2 10.0.0.188 192.68.0.5

; ############################
, ##    Generic Settings    ##
; ############################
; cutsomizable hostname of executing NAS (used in notifications)
MYNAME=SYNOLOGY_HOSTNAME
; active status of this script (for manual deactivation)
ACTIVE_STATUS=1

; ############################
; ##     Sleep Settings     ##
; ############################
; note: system will be shut down after (SLEEP_TIMER*SLEEP_MAXLOOP)
; wating time to check clients again
SLEEP_TIMER=60
; maximal count of loops no valid system may offline (=sleep period)
SLEEP_MAXLOOP=30
; beep system loudspeaker if system is going to be shut down (3 beeps))
SHUTDOWN_BEEP=1
; number of beeps while shutting down
SHUTDOWN_BEEP_COUNT=3

; ############################
; ##   IFTTT integration    ##
; ############################
; magic key of webhook in IFTTT
IFTTT_KEY=xxxxxxxxxxxxxx
; action name of webhook not notification message
IFTTT_EVENT=syno_status

; ############################
; ##     Grace Settings     ##
; ############################
; ????
GRACE_TIMER=5
; beep system loudspeaker if in grace period
GRACE_BEEP=1
; number of beeps while shutting down
GRACE_BEEP_COUNT=3


; ############################
; ##     Notifications      ##
; ############################
; notify via IFTTT at grace start event
NOTIFY_ON_GRACE_START=1
; notify via IFTTT at grace event
NOTIFY_ON_GRACE_EVERY=1
; notify via IFTTT at shutdown
NOTIFY_ON_SHUTDOWN=1
; notify on status change
NOTIFY_ON_STATUS_CHANGE=1

; ############################
; ##     Long runners       ##
; ############################
; notify every n loop about still running system
NOTIFY_ON_LONGRUN_EVERY=120


; ############################
; ##       Messages         ##
; ############################
; notification message for sleep period
MESSAGE_SLEEP=System is going to be shut down...
; notification message for start of grace period
MESSAGE_GRACE_START=No valid client online - System is goint to be shut down soon...
; notification message for every notification of grace period
MESSAGE_GRACE_EVERY=No valid client online - System is goint to be shut down soon...
; notification message for still running systems
MESSAGE_LONGRUN=System still running. Correct?
; notification message for state change to found systems
MESSAGE_STATUS_CHANGE_VAL=Systems found, normal mode started...
; notification message for state change to no found systems
MESSAGE_STATUS_CHANGE_INV=No systems found, monitoring mode started!

; ############################
; ##      Log Sttings       ##
; ############################
; maximl number of lines to keep in logfile
LOGFILE_MAXLINES=0
; maximal # days to keep log files
LOGFILE_CLEANUP_DAYS=3
